  build-depends:       
      base >= 4.9 && < 4.10
    , text >= 1.2 && < 1.3
    , mtl >= 2.2 && < 2.3
    , containers >=0.5 && <0.6
    , reflex >= 0.5 && < 0.6
    , reflex-dom-core >= 0.4 && < 0.5
    , lens
    , jsaddle
    , ghcjs-dom
  if !impl(ghcjs -any)
    build-depends:
        filepath >=1.4 && <1.5
      , directory >=1.3 && <1.4
      , jsaddle-warp
      , wai >= 3.2 && < 3.3
      , warp
      , wai-middleware-static
      , websockets
  hs-source-dirs:      src
  if impl(ghcjs -any)
    ghc-options:       -Wall -dedupe
    cpp-options:       -DGHCJS_BROWSER
  else
    ghc-options:       -Wall
  default-language:    Haskell2010
  

executable solutions
  if !impl(ghcjs -any)
    buildable: False
  main-is:             Main.hs
  build-depends:       base >=4.9 && < 4.10
                     , reflex-dom-core >= 0.4 && < 0.5
                     , exercises
